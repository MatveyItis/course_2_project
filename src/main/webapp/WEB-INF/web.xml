<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>Welcome</welcome-file>
        <welcome-file>/views/home.jsp</welcome-file>
        <welcome-file>/views/signUp.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>ru.itis.maletskov.context.UserServiceListener</listener-class>
    </listener>
    <listener>
        <listener-class>ru.itis.maletskov.context.LocaleListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>addArtist</servlet-name>
        <jsp-file>/views/addArtist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>signUp</servlet-name>
        <servlet-class>ru.itis.maletskov.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signIn</servlet-name>
        <servlet-class>ru.itis.maletskov.servlets.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signUpFailed</servlet-name>
        <jsp-file>/views/signUpFailed.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>successLogIn</servlet-name>
        <jsp-file>/views/successLogIn.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/views/home.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>successLogIn</servlet-name>
        <url-pattern>/successLogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signUpFailed</servlet-name>
        <url-pattern>/signUpFailed</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addArtist</servlet-name>
        <url-pattern>/addArtist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signUp</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signIn</servlet-name>
        <url-pattern>/signIn</url-pattern>
    </servlet-mapping>
</web-app>