<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>Welcome</welcome-file>
        <welcome-file>/views/home.jsp</welcome-file>
        <welcome-file>/views/signUp.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>ru.itis.maletskov.context.UserServiceListener</listener-class>
    </listener>
    <listener>
        <listener-class>ru.itis.maletskov.context.LocaleListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/WEB-INF/views/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/WEB-INF/views/home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/WEB-INF/views/profile.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errors/404.jsp</location>
    </error-page>
</web-app>