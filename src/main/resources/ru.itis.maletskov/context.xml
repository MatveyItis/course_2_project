<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="usersRepository" class="ru.itis.maletskov.repositories.UsersRepositoryJdbcTemplateImpl">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="authRepository" class="ru.itis.maletskov.repositories.AuthRepositoryJdbcTemplateImpl">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="songRepository" class="ru.itis.maletskov.repositories.SongRepositoryJdbcTemplateImpl">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="libraryRepository" class="ru.itis.maletskov.repositories.LibraryRepositoryJdbcTemplateImpl">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="artistRepository" class="ru.itis.maletskov.repositories.ArtistRepositoryJdbcTemplateImpl">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="albumRepository" class="ru.itis.maletskov.repositories.AlbumRepositoryJdbcTemplateImpl">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/musicservice"/>
        <property name="username" value="postgres"/>
        <property name="password" value="12ER56ui78"/>
    </bean>
    <bean id="usersService" class="ru.itis.maletskov.services.UsersServiceImpl">
        <constructor-arg name="usersRepository" ref="usersRepository"/>
        <constructor-arg name="authRepository" ref="authRepository"/>
    </bean>
    <bean id="songService" class="ru.itis.maletskov.services.SongServiceImpl">
        <constructor-arg name="libraryRepository" ref="libraryRepository"/>
        <constructor-arg name="songRepository" ref="songRepository"/>
    </bean>
    <bean id="artistService" class="ru.itis.maletskov.services.ArtistServiceImpl">
        <constructor-arg name="artistRepository" ref="artistRepository"/>
    </bean>
</beans>